pipeline {
    agent any
    tools {
  terraform 'terraform'
}
    stages {
        stage('Building the infrastructure') {
            steps {
        withAWS(credentials: 'jenkins_aws', region: 'us-east-1') { 
         // git url: 'https://github.com/4mohamedalaa/terraform_infrastucture.git',branch: 'main'
          withCredentials([usernamePassword(credentialsId: 'terraform_mysql_env',usernameVariable: 'db_User', passwordVariable: 'db_Pass')]){ 
                  sh 'terraform  init'
                  sh "TF_VAR_username=${db_User} TF_VAR_password=${db_Pass}=  terraform  apply --var-file dev.tfvars -auto-approve"
                }          
                    
                }
             }
        }
        }
    }
